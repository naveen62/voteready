        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <% if(!currentUser) { %>
                <li><a class='nsize'href="/login">Sign in</a></li>
                <li><a class='nsize' href="/register">Sign up</a></li>
                <% } else { %>
                <li><a class='nsize' href="#">Signed in as <%= currentUser.username %></a></li>
                <li><a class='nsize' href="/user/polls">MyPolls</a></li>
                <li><a class='nsize' href="/logout">Sign out</a></li>
                <% } %>
            </ul>
        </div> 
    </div>
</nav>
<div id='flash' class="container">
    <% if(error && error.length > 0) { %>
  <div class="alert alert-danger alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <%= error %>
  </div>
  <% } %>
    <% if(success && success.length > 0) { %>
 <div class="alert alert-success alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <%= success %>
  </div>
  <% } %>
</div>
